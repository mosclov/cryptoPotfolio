<p id="notice"><%= notice %></p>

<div class="container">
  <h1>ViGo Investment Portfolio </h1>
  <div style="clear: both">
    <h3 style="float: left">Profit/Loss: <%= number_to_currency(@profit) %></h3>
    <h3 style="float: right">Total: <%= number_to_currency(@total) %></h3>
  </div>

  <br>
  <div style="clear: both">
    <h5 style="float: left">Last Day: <%= @daily %>%</h5>
    <h5 style="float: right">Total includes $520 Safex</h5>
  </div>
  <div style="clear: both">
    <h5 style="float: left">Market Cap: <%= number_to_currency(@market) %></h5>
    <h5 style="float: right">Last Update: <%= @last_update %></h5>
  </div>

  <table class="table">
    <thead class="thead-default">
      <tr>
        <th>Coin</th>
        <th>Total</th>
        <th>Value</th>
        <th>Qty</th>
        <th>Change(1hr)</th>
        <th>Change(24hr)</th>
        <th>% of Portolfio</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cryptos.each do |crypto| %>
      <tr>
        <td><%= crypto.name.titleize %> </td>
        <% @result.each_with_index do |group,index| %>
          <% @x = number_to_currency(group["price_usd"].to_f * crypto.qty) %>
          <% @y = group["price_usd"].to_f * crypto.qty %>
          <% if crypto.name == group["id"]%>
            <td> <%= @x %></td>
            <td> $<%= group["price_usd"] %></td>
            <td><%= crypto.qty %> </td>
            <td class="<%= group["percent_change_1h"].to_f >= 0 ? "green" : "red" %>"> <%= group["percent_change_1h"] ? group["percent_change_1h"] : "0.00" %>%</td>
            <td class="<%= group["percent_change_24h"].to_f >= 0 ? "green" : "red" %>"> <%= group["percent_change_24h"] ? group["percent_change_24h"] : "0.00" %>%</td>
            <td> <%= ((@y / @total) * 100).round(2) %>%</td>
          <% elsif crypto.name == group["name"]%>
            <td> <%= @x %></td>
            <td> $<%= group["price_usd"] %></td>
            <td><%= crypto.qty %> </td>
            <td class="<%= group["percent_change_1h"].to_f >= 0 ? "green" : "red" %>"> <%= group["percent_change_1h"] %>%</td>
            <td class="<%= group["percent_change_24h"].to_f >= 0 ? "green" : "red" %>"> <%= group["percent_change_24h"] %>%</td>
            <td> <%= ((@y / @total) * 100).round(2) %>%</td>
          <% elsif crypto.name == group["name"].titleize %>
            <td> <%= @x %></td>
            <td> $<%= group["price_usd"] %></td>
            <td><%= crypto.qty %> </td>
            <td class="<%= group["percent_change_1h"].to_f >= 0 ? "green" : "red" %>"> <%= group["percent_change_1h"] %>%</td>
            <td class="<%= group["percent_change_24h"].to_f >= 0 ? "green" : "red" %>"> <%= group["percent_change_24h"] %>%</td>
            <td> <%= ((@y / @total) * 100).round(2) %>%</td>
          <% end %>
        <% end %>
        <td><%= link_to 'Edit', edit_crypto_path(crypto) %></td>
        <td><%= link_to 'Delete', crypto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Crypto', new_crypto_path %>

  <br>
  <br>
  <hr>


<h2>Coins to watch</h2>
<br>
<%= link_to 'New Coin to Watch', new_prospect_path %>

<table class="table">
  <thead class="thead-default">
    <tr>
      <th>Coin</th>
      <th>Price USD</th>
      <th>Price BTC</th>
      <th>Change(1hr)</th>
      <th>Change(24hr)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prospects.each do |prospect| %>
      <tr>
        <td><%= prospect.name.titleize %> </td>
        <% @result.each_with_index do |group,index| %>
        <% if prospect.name == group["id"] || prospect.name == group["name"] ||  prospect.name == group["name"].titleize || prospect.name == group["symbol"] || prospect.name == group["symbol"].downcase%>
        <td> $<%= group["price_usd"] %></td>
        <td> $<%= group["price_btc"] %></td>
        <td class="<%= group["percent_change_1h"].to_f >= 0 ? "green" : "red" %>"> <%= group["percent_change_1h"] %>%</td>
        <td class="<%= group["percent_change_24h"].to_f >= 0 ? "green" : "red" %>"> <%= group["percent_change_24h"] %>%</td>

        <% end %>
        <% end %>
        <td><%= link_to 'Delete', prospect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
